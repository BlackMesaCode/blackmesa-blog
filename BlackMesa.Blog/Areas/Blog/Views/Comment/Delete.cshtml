@using BlackMesa.Blog.Resources
@model BlackMesa.Blog.Models.Blog.Comment

@{
    ViewBag.Title = Strings.Comment + " " + Strings.Delete;
}

<section id="comment-delete">
    
    <h1>@ViewBag.Title</h1>
    
    @Strings.PleaseConfirm

    @using (Html.BeginForm()) {
        
        @Html.AntiForgeryToken()
        
        @Html.HiddenFor(model => model.Id)
        
        <p>
            <input type="submit" value="@Strings.Delete" />
            <i class="fa fa-arrow-circle-o-left"></i> @Html.ActionLink(Strings.Back, "Details", "Entry", new { Id = Model.EntryId }, null)
        </p>
        
    }
    
</section>
