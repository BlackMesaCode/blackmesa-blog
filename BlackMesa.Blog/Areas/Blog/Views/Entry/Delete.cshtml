@using BlackMesa.Blog.Resources
@model BlackMesa.Blog.Models.Blog.Entry

@{
    ViewBag.Title = Strings.Entry + " " + Strings.Delete;
}

<h1>@ViewBag.Title</h1>

@Strings.PleaseConfirm

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="@Strings.Delete" />
        <i class="fa fa-arrow-circle-o-left"></i>  @Html.ActionLink(Strings.Back, "Index")
    </p>
}
