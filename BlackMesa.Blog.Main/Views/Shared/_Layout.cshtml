@using System.Web.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="@Url.Content("~/Content/custom/images/favicon.ico")" type="image/x-icon" />
    <link rel="icon" href="@Url.Content("~/Content/custom/images/favicon.jpg")" type="image/png" />

    <title>@ViewBag.Title | @WebConfigurationManager.AppSettings.Get("SiteTitle")</title>

    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/normalize/normalize.css" rel="stylesheet" />
    <link href="~/Content/custom/less/custom.less" rel="stylesheet" />
    <link href="~/Content/pagedlist/PagedList.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container">
        <header id="header">
            @Html.Partial("_Header")
        </header>
        <div id="content">
            @RenderBody()
        </div>
        <footer id="footer">
            @Html.Partial("_Footer")
        </footer>
    </div>
    

    <script src="~/Content/jquery/jquery-2.0.3.min.js"></script>
    <script src="~/Content/jquery-autogrow-textarea/jquery-autogrow-textarea.js"></script>
    <script src="~/Content/custom/scripts/global.js"></script>
    <script src="~/Content/ace/ace.js"></script>
    <script src="~/Content/ace/mode-html.js"></script>
    <script src="~/Content/ace/theme-clouds.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>