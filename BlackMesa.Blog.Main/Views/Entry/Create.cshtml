@model BlackMesa.Blog.Model.Entry

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create Entry</legend>

        @Html.Partial("_CreateEditFieldset")  @* no model is passed so the parents viewmodel is passed by default *@
        
        <br/>

        <input class="entry-create-edit-submit btn btn-primary" type="submit" value="Create" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
    </fieldset>
}

@section Styles {
    @Styles.Render("~/Content/admin")
}

@section Scripts {
    @Scripts.Render("~/bundles/admin")
    @Scripts.Render("~/Scripts/entry-create-edit.js")
    @Html.Partial("_CreateEditFieldsetJavascript", Model)
}
