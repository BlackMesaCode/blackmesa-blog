@model BlackMesa.Blog.Model.Entry

<div id="entry-create-edit">
    
    @Html.ValidationMessageFor(model => model.Language)
    @Html.ValidationMessageFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Preview)
    @Html.ValidationMessageFor(model => model.DateCreated)
    @Html.ValidationMessageFor(model => model.DateEdited)
    @Html.ValidationMessageFor(model => model.TagsAsString)
    @Html.ValidationMessageFor(model => model.Content)

    <input name="Language" type="hidden" value="@ViewBag.CurrentLanguage" />
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div id="title-input" class="editor-field">
        @Html.EditorFor(model => model.Title)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.TagsAsString)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.TagsAsString)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Preview)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Preview)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Content)
    </div>
    <div class="editor-field">
        @Html.HiddenFor(model => model.Content)
        <div id="editor-container">
            <div id="editor">@Model.Content</div>
        </div>
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.DateCreated)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DateCreated)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.DateEdited)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DateEdited)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Published)
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.Published)
    </div>

</div>