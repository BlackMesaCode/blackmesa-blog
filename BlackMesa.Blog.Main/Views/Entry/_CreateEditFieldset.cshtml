@model BlackMesa.Blog.Model.Entry

<div id="entry-create-edit">
    
    @Html.ValidationMessageFor(model => model.Language)
    @Html.ValidationMessageFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Preview)
    @Html.ValidationMessageFor(model => model.Tags)
    @Html.ValidationMessageFor(model => model.DateCreated)
    @Html.ValidationMessageFor(model => model.DateEdited)
    @Html.ValidationMessageFor(model => model.Content)

    <input name="Language" type="hidden" value="@ViewBag.CurrentLanguage" />
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Preview)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Preview)
    </div>
    
    <div class="editor-label">
        <i class="fa fa-calendar"></i>@Html.LabelFor(model => model.DateCreated)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DateCreated)
    </div>
    
    <div class="editor-label">
        <i class="fa fa-calendar"></i>@Html.LabelFor(model => model.DateEdited)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.DateEdited)
    </div>
    
    @*<div class="editor-label">
        @Html.LabelFor(model => model.Tags)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Tags)
    </div>*@
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Published)
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.Published)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Content)
    </div>
    <div class="editor-field">
        <input type="hidden" name="Content" id="Content"/>
        @*@Html.HiddenFor(model => model.Content)*@
        @Html.EditorFor(model => model.Content)
        @*<div id="editor-container">
            <div id="editor">@(Model != null ? Model.Content : Html.Partial("_ContentTemplate").ToHtmlString())</div>
        </div>*@
    </div>
</div>