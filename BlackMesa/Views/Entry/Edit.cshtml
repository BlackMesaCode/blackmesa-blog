@model BlackMesa.Models.Entry

@{
    ViewBag.Title = "Edit";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/ckeditor/ckeditor.js")
    @Html.Partial("_DateTimePickerJavascript", Model)
}

<section id="entry-edit">

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Edit Entry</legend>

            @Html.HiddenFor(model => model.Id)

            @Html.Partial("_CreateEditFieldset")

            <p>
                <input class="btn btn-primary" type="submit" value="Save" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
            </p>
        </fieldset>
    }

        
</section>