@using PagedList.Mvc
@model PagedList.IPagedList<BlackMesa.Models.Entry>


<i class="icon-info-sign"></i> Entries found: @Model.Count() 

@foreach (var item in Model)
{
    @Html.Partial("_Entry", item)
}

@Html.PagedListPager(Model, page => Url.Action("Index", "Entry", new { page, ViewBag.SelectedTags }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(PagedListRenderOptions.ClassicPlusFirstAndLast, 
    new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "entry-index-articles", OnComplete = "PagedOnComplete" }))