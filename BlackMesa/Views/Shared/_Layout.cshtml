@using System.Web.Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="@Url.Content("~/Content/Images/favicon.ico")" type="image/x-icon"/>
    <link rel="icon" href="@Url.Content("~/Content/Images/favicon.jpg")" type="image/png"/>
    <title>@ViewBag.Title | @WebConfigurationManager.AppSettings.Get("SiteTitle")</title>
    @Styles.Render("~/Content/global")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <div class="container">
            <header>
                @Html.Partial("_Header")
            </header>
            <nav>
                @Html.Partial("_Navigation")
            </nav>
            <div id="content">
                @RenderBody()
            </div>
            <footer>
                @Html.Partial("_Footer")
            </footer>
        </div>

        @Scripts.Render("~/bundles/global")
        @RenderSection("Scripts", required: false)
    </body>
</html>