@using BlackMesa.Website.Main.Resources


@{
    ViewBag.Title = Strings.Learning;
}

@* ------------------- Content ------------------- *@

<div id="content">
    <section id="home-index">
        
        <div id="logo" class="tile gray-darker center">
            <img src="~/Content/custom/images/mystack_logo_inverted.png" />
        </div>

        <div class="tile gray-light center">
            <h3>subtitle</h3>
        </div>

    </section>
</div>

<nav id="menu">

    @if (User.Identity.IsAuthenticated)
    {
        <a class="red-hover" href="@Url.Action("Index", "Folder")" title="@Strings.YourFolders">
            <i class="icon-list"></i>
        </a>
        
        <a class="red-hover" href="@Url.Action("LogOff", "Account", new { area = "Identity" })" title="@Strings.Logout">
            <i class="icon-logout"></i>
        </a>
        
        <a class="red-hover" href="@Url.Action("Manage", "Account", new { area = "Identity" })" title="@Strings.Manage">
            <i class="icon-cogs"></i>
        </a>
    }
    else
    {
        <a class="red-hover" href="@Url.Action("Login", "Account", new { area = "Identity"})" title="@Strings.LogIn">
            <i class="icon-login"></i>
        </a>
        
        <a class="red-hover" href="@Url.Action("Register", "Account", new { area = "Identity"})" title="@Strings.Register">
            <i class="icon-register"></i>
        </a>
    }

</nav>



