@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Selection.SearchResultsViewModel

@{
    var results = "";
    if (Model.SearchResults.Count == 1)
    {
        results = Strings.SearchResult;
    }
    else
    {
        results = Strings.SearchResults;
    }
    ViewBag.Title = Model.SearchResults.Count + " " + results;
}


@* ------------------- Content ------------------- *@

<div id="content">
    
    <section id="folder-search-results">

        <div class="tile gray-darker">
            <h1>@ViewBag.Title</h1>
        </div>


        @foreach (var result in Model.SearchResults)
        {
            @Html.Partial("_SearchResult", result)
        }

    </section>

</div>


@* ------------------- Menu ------------------- *@

<nav id="menu">

    <a class="red-hover" href="@Url.Action("Details", "Folder", new { id = Model.Id })" title="@Strings.Back">
        <i class="icon-back"></i>
    </a>

</nav>