@using System.Activities.Statements
@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Selection.SearchSelectionViewModel

@{
    ViewBag.Title = Strings.SearchFolder;
}


@* ------------------- Content ------------------- *@

<div id="content">
    

    <section id="folder-search">   
        
        @using (Html.BeginForm())
        {
            
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.FolderId)
            
            if (!ViewData.ModelState.IsValid)
            {
                <div class="tile gray-light">
                    @Html.ValidationSummary()
                </div>
            }
            
            <div class="tile gray-darker">
                <h1>@ViewBag.Title</h1>
            </div>


            <div class="tile gray-dark">
                <h3>@(Model.SelectedFolders.Count == 1 ? Strings.SelectedFolder : Strings.SelectedFolders)</h3>
            </div>

            foreach (var folder in Model.SelectedFolders)
            {
                <div class="tile gray-light">
                    <i class="icon-folder"> </i>@folder.Name
                </div>
            } 
            
            
            <div class="tile gray-dark">
                <h3>@Strings.SearchWhat</h3>
            </div>
            
            <div class="form-element-container">
                @Html.TextBoxFor(model => model.SearchText, new { @placeholder = Strings.Name, @autocomplete = "off" })
            </div>

            <div class="tile gray-dark">
                <h3>@Strings.SearchWhere</h3>
            </div>

            <label class="tile gray-light-hover" for="_SearchFrontSide">
                @Html.CheckBoxFor(model => model.SearchFrontSide, new { @id = "_SearchFrontSide" }) @Strings.SearchFrontSide
            </label>

            <label class="tile gray-light-hover" for="_SearchBackSide">
                @Html.CheckBoxFor(model => model.SearchFrontSide, new { @id = "_SearchBackSide" }) @Strings.SearchBackSide
            </label>
            
            <div class="tile gray-dark">
                <h3>@Strings.SearchWhen</h3>
            </div>

            <div class="form-element-container">
                <button class="gray-dark-hover" type="submit">
                    @Strings.ToSearch
                </button>
            </div>
        }
        

    </section>

</div>



@* ------------------- Menu ------------------- *@

<nav id="menu">

    <a class="red-hover" href="@Url.Action("Details", "Folder", new { id = Model.FolderId })" title="@Strings.Back">
        <i class="icon-back"></i>
    </a>

</nav>