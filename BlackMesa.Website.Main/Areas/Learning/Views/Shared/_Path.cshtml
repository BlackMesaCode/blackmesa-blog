@using BlackMesa.Website.Main.Resources

@model Dictionary<string,string>

<div id="folder-path">
    @for (int i = 0; i < Model.Count; i++)
    {
        string id = String.Empty;
        if (i == Model.Count - 1)
        {
            id = "last-folder";
        }
        <a id="@id" href="@Url.Action("Details", "Folder", new { id = Model.Values.ElementAt(i) })">
            <div class="tile gray-dark-hover">
                @Model.Keys.ElementAt(i)<i class="icon-right"></i>
            </div>
        </a>
    }
</div>

