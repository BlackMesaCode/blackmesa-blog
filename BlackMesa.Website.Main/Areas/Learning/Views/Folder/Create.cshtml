@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Folder.CreateFolderViewModel

@{
    ViewBag.Title = Strings.Folder + " " + Strings.Create;
}


@* ------------------- Content ------------------- *@

<div id="content">
    <section id="folder-create">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.ParentFolderId)
            
            <div class="tile gray-darker">
                <h1>@ViewBag.Title</h1>
            </div>

            if (!ViewData.ModelState.IsValid)
            {
                <div class="tile gray-light">
                    @Html.ValidationSummary()
                </div>
            }
            


            <div class="form-element-container">
                @Html.TextBoxFor(model => model.Name, new { @placeholder = Strings.Name, @autocomplete = "off" })
            </div>
            

            <div class="form-element-container">
                <button class="gray-darker-hover" type="submit">
                    @Strings.Save
                </button>
            </div>
            

        }

    </section>
</div>



@* ------------------- Menu ------------------- *@

<nav id="menu">

    
    @if (String.IsNullOrEmpty(Model.ParentFolderId))
    {
        <a class="red-hover" href="@Url.Action("Index", "Folder")" title="@Strings.Back">
            <i class="icon-abort"></i>
        </a>
    }
    else
    {
        <a class="red-hover" href="@Url.Action("Details", "Folder", new { id = Model.ParentFolderId })" title="@Strings.Abort">
            <i class="icon-abort"></i>
        </a>
    }



</nav>





