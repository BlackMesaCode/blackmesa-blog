@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.CreateEditFolderViewModel

<section id="folder-create">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h1>@Strings.Folder @Strings.Create</h1>

        @Html.Partial("_CreateEditFieldset")

        <p>
            <button type="submit">
                @Strings.Save
            </button>
            <i class="fa fa-arrow-circle-o-left"></i> @Html.ActionLink(Strings.Back, "Index")
        </p>
    }

</section>
