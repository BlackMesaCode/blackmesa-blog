@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Folder.FolderIndexViewModel
    

@{
    ViewBag.Title = Strings.YourFolders;
}

@* ------------------- Content ------------------- *@

<div id="content">
    <section id="folder-index">

        @*<div id="folder-index-submenu">
            <span id="folder-index-count"><i class="fa fa-list"></i>@Model.TotalLearningUnits @(Model.TotalLearningUnits == 1 ? Strings.LearningUnit : Strings.LearningUnits)</span>
            <span id="folder-index-search"><i class="fa fa-search"></i>@Html.ActionLink(Strings.ToSearch, "Search", "Entry")</span>
            <hr />
        </div>*@
        
        

        <div class="tile gray-darker">
            <h1>@ViewBag.Title</h1>
        </div>

        @foreach (var subFolder in Model.Folders)
        {
            <a href="@Url.Action("Details", "Folder", new { id = subFolder.Id })">
                <div class="tile gray-light-hover">
                    <i class="icon-folder"> </i>@subFolder.Name
                </div>
            </a>
        }
        
        @if (Model.Folders.Count == 0)
        {
            <a href="@Url.Action("Create")">
                <div class="tile gray-light-hover">
                    <i class="icon-plus"> </i>@Strings.CreateFolder
                </div>
            </a>
        }

    </section>
</div>



@* ------------------- Menu ------------------- *@

<nav id="menu">

    <a class="red-hover" href="@Url.Action("Create")" title="@Strings.CreateFolder">
        <i class="icon-plus prefix-icon"></i><i class="icon-folder"></i>
    </a>

    
    <a class="red-hover" href="@Url.Action("Stats", "Home")" title="@Strings.Statistics">
        <i class="icon-stats"></i>
    </a>


    <a class="red-hover" href="@Url.Action("Settings", "Home")" title="@Strings.Settings">
        <i class="icon-cogs"></i>
    </a>

   

</nav>