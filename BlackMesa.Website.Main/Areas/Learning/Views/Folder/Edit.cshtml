@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Folder.EditFolderViewModel
@{
    ViewBag.Title = Strings.Folder + " " + Strings.Edit;
}

<section id="folder-edit">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h1>@ViewBag.Title</h1>

        @Html.HiddenFor(model => model.Id)

        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)
        
        <p>
            <button type="submit">
                @Strings.Save
            </button>
            <i class="fa fa-arrow-circle-o-left"></i> @Html.ActionLink(Strings.Back, "Index")
        </p>
    }

</section>
