@using BlackMesa.Website.Main.Resources
@using BlackMesa.Website.Main.Utilities

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Query.QueryItemViewModel

@{
    ViewBag.Title = Strings.Query;
}

<div id="content">

    <section id="query-item-show">

        @using (Html.BeginForm("SaveQueryItem", "Query"))
        {
            @Html.AntiForgeryToken()

            if (!ViewData.ModelState.IsValid)
            {
                <div class="tile gray-light">
                    @Html.ValidationSummary()
                </div>
            }

            @Html.HiddenFor(model => model.FolderId)
            @Html.HiddenFor(model => model.QueryId)
            @Html.HiddenFor(model => model.CardId)
            @Html.HiddenFor(model => model.StartTime)


            <div id="frontside">

                <div class="tile-splitter">
                    <div class="tile gray-darker">
                        <h1>@Strings.FrontSide</h1>
                    </div>

                    <div class="tile gray-dark">
                        <h1><i class="icon-pile"></i>@Model.CardsLeft</h1>
                    </div>
                </div>


                <a class="frontside-backside-toggle" href="#">
                    <div class="tile gray-light">
                        <pre>@Model.FrontSide</pre>
                    </div>

                    @*<div class="tile gray-dark-hover">
                        <i class="icon-flip"></i><h3>@Strings.FlipCard</h3>
                    </div>*@
                </a>

            </div>


            <div id="backside">

                <div class="tile-splitter">
                    <div class="tile gray-darker">
                        <h1>@Strings.BackSide</h1>
                    </div>

                    <div class="tile gray-dark">
                        <h1><i class="icon-pile"></i>@Model.CardsLeft</h1>
                    </div>
                </div>
                
                <a class="frontside-backside-toggle" href="#">
                    <div class="tile gray-light">
                        <pre>@Model.BackSide</pre>
                    </div>
                </a>
            </div>
            
            <div id="result-buttons">

                <div class="form-element-container">
                    <button class="gray-dark-hover" type="submit" id="result" name="result" value="0">
                        <i class="icon-happy"></i>@Strings.QueryResultCorrect
                    </button>
                </div>


                <div class="form-element-container">
                    <button class="gray-dark-hover" type="submit" id="result" name="result" value="1">
                        <i class="icon-neutral"></i>@Strings.QueryResultPartlyCorrect
                    </button>
                </div>


                <div class="form-element-container">
                    <button class="gray-dark-hover" type="submit" id="result" name="result" value="2">
                        <i class="icon-unhappy"></i>@Strings.QueryResultWrong
                    </button>
                </div>

            </div>
            
            
        }

    </section>

</div>



@* ------------------- Menu ------------------- *@

<nav id="menu">

    <a class="red-hover" href="@Url.Action("Details", "Folder", new { id = Model.FolderId })" title="@Strings.Abort">
        <i class="icon-abort"></i>
    </a>

</nav>


@section Scripts {
    <script src="~/Areas/Learning/Javascript/query-show.js"></script>
}


