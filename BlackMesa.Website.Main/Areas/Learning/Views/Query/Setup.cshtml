@using BlackMesa.Website.Main.Resources
@using BlackMesa.Website.Main.Utilities

@model BlackMesa.Website.Main.Areas.Learning.ViewModels.Query.SetupQueryViewModel

@{
    ViewBag.Title = Strings.SetupQuery;
}

<div id="content">

    <section id="query-setup">

        @using (Html.BeginForm("Start", "Query"))
        {
            @Html.AntiForgeryToken()
            
            <div class="tile gray-darker">
                <h1>@ViewBag.Title</h1>
            </div>
            
            if (!ViewData.ModelState.IsValid)
            {
                <div class="tile gray-light">
                    @Html.ValidationSummary()
                </div>
            }

            
            @Html.HiddenFor(model => model.FolderId)

            <div class="tile gray-dark">
                <h3>@Strings.General</h3>
            </div>

            <label class="tile gray-light-hover" for="_QueryOnlyDueCards">
                @Html.CheckBoxFor(model => model.QueryOnlyDueCards, new { @id = "_QueryOnlyDueCards" }) @Strings.QueryOnlyDueCards
            </label>

            <label class="tile gray-light-hover" for="_ReverseSides">
                @Html.CheckBoxFor(model => model.ReverseSides, new { @id = "_ReverseSides" }) @Strings.ReverseSides
            </label>


            <div class="tile gray-dark">
                <h3>@Html.LabelFor(model => Model.OrderType)</h3>
            </div>
            

            @Html.RadioButtonForEnum(model => model.OrderType)

            <div class="tile gray-dark">
                <h3>@Html.LabelFor(model => Model.QueryType)</h3>
            </div>
            
            
            @Html.RadioButtonForEnum(model => model.QueryType)

            <div class="form-element-container">
                <button class="gray-dark-hover" type="submit">
                    @Strings.StartQuery
                </button>
            </div>
        }

    </section>

</div>



@* ------------------- Menu ------------------- *@

<nav id="menu">
    
    <a class="red-hover" href="@Url.Action("Details", "Folder", new { id = Model.FolderId })" title="@Strings.Back">
        <i class="icon-back"></i>
    </a>

</nav>

