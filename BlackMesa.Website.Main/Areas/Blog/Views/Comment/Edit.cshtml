@using BlackMesa.Website.Main.Resources

@model BlackMesa.Website.Main.Areas.Blog.ViewModels.EditCommentViewModel

@{
    ViewBag.Title = Strings.Comment + " " + Strings.Edit;
}

<section id="comment-edit">
    
    <h1>@ViewBag.Title</h1>

    @using (Html.BeginForm()) {
        
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        @Html.LabelFor(model => model.Content)
        @Html.EditorFor(model => model.Content)

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.EntryId)

        <p>
            <input type="submit" value=@Strings.Save />
            <i class="fa fa-arrow-circle-o-left"></i> @Html.ActionLink(Strings.Back, "Details", "Entry", new { Id = Model.EntryId }, null)
        </p>

    }

</section>
