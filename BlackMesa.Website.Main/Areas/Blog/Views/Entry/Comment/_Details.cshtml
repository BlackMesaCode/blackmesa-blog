    <div class="display-field">
        @Html.DisplayFor(model => model.Content)
    </div>
    
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
